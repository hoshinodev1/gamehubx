    <script>
        // Mobile Menu Toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navMenu = document.getElementById('navMenu');
        
        mobileMenuBtn.addEventListener('click', () => {
            navMenu.classList.toggle('active');
            mobileMenuBtn.innerHTML = navMenu.classList.contains('active') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        });

        // Close mobile menu when clicking a link
        document.querySelectorAll('nav a').forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });

        // Verified Badge Interactions
        const verifiedButtons = [
            // Verification Buttons
            { id: 'verifyBtn', action: () => showVerificationModal() },
            { id: 'verifyIdentityBtn', action: () => showVerificationModal() },
            { id: 'checkVerificationBtn', action: () => showVerificationStatus() },
            { id: 'verificationBtn', action: () => showVerificationStatus() },
            
            // Contact Buttons
            { id: 'emailBtn', action: () => window.open('mailto:gamedevhuboriginal@gmail.com?subject=GameDev Hub Inquiry&body=Dear Hoshino Asser,') },
